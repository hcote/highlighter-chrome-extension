{
    "name": "Smart Text Highlight",
    "version": "1.0",
    "description": "Highlight any page text on the web.",
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "run_at": "document_end",
          "js": ["content_Script.js"]
        }
      ],
    "manifest_version": 2
  }

  