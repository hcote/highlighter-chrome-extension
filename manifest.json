{
    "name": "Highlighter",
    "version": "1.0",
    "description": "Highlight any page text on the web.",
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "manifest_version": 2
  }

  