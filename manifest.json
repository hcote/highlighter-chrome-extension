{
    "name": "Highlighter",
    "version": "1.3",
    "description": "Highlight any page text on the web.",
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "commands": {
        "highlight_text": {
            "suggested_key": {
                "mac": "Command+K",
                "default": "Ctrl+E"
            },
            "description": "Highlight Selected Text"
        },
        "clear_storage": {
            "suggested_key": {
                "mac": "Command+Shift+A",
                "default": "Ctrl+Shift+A"
            },
            "description": "Clear highlights for current URL"
        }
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "run_at": "document_end",
          "js": ["content_Script.js"]
        }
    ],
    "manifest_version": 2
  }

  